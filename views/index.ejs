<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/css/index.css" />
    <script src="/js/navbar.js" defer></script>
    <script src="/js/index.js" defer></script>
    <title>OnlineSzop</title>
  </head>
  <body>
    <%- include('layouts/navbar') %> <% if (!products.length > 0) { %>
    <p class="welcome-text">No products where found</p>
    <% } else { %>
    <p class="welcome-text">Find the best product for yourself!</p>
    <div class="product-card__container">
      <% products.forEach(product => { %>
      <div class="product-card">
        <p class="product-card__name"><%= product.name %></p>
        <% if (!product.imageName) { %>
        <img class="product-card__image" src="/images/no-image.png" />
        <% } else { %>
        <img
          class="product-card__image"
          src="/uploads/<%= product.imageName %>"
        />
        <% } %>
        <p class="product-card__added-date">
          <%= product.addedDate.toLocaleString('pl-PL') %>
        </p>
        <p class="product-card__description"><%= product.description %></p>
        <div class="product-card__add-to-cart">
          <p class="product-card__price">$<%= product.price.toFixed(2) %></p>
          <button
            class="product-card__add-to-cart__button"
            type="button"
            data-product-id="<%= product._id %>"
          >
            Add to
            <i
              id="product-card__add-to-cart__icon"
              class="fas fa-shopping-cart"
            ></i>
          </button>
        </div>
      </div>
      <% }) %>
    </div>
    <%- include('layouts/pagination', { baseURL: '/' }) %> <% } %>
  </body>
</html>
